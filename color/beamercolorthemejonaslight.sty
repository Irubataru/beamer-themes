% Requirement
\RequirePackage{xcolor}

% Colours
\definecolor{lightlightblue}{RGB}{128,178,242}
\definecolor{lightlightcyan}{RGB}{73,166,166}
\definecolor{lightlightgreen}{RGB}{184,191,132}
\definecolor{lightlightorange}{RGB}{191,114,86}
\definecolor{lightlightred}{RGB}{191,42,42}

% Colours
\definecolor{LightUIBase}{RGB}{44,62,80}
\definecolor{LightUIRed}{RGB}{231,76,60}
\definecolor{LightUIGray}{RGB}{236,240,241}
%\definecolor{LightUILightBlue}{RGB}{52,152,219}
\definecolor{LightUILightBlue}{RGB}{72,172,239}
\definecolor{LightUIBlue}{RGB}{41,128,185}

% Settings
\setbeamercolor*{title page header}{fg=LightUIBase}
\setbeamercolor*{author}{fg=LightUIBase}
\setbeamercolor*{date}{fg=LightUIBase}
\setbeamercolor*{header text}{fg=black}
\setbeamercolor*{normal text}{fg=LightUIBase}
\setbeamercolor*{frametitle}{fg=LightUIRed}
%\setbeamercolor*{frametitle}{fg=LightUIBase}

% For the boxes
%\setbeamercolor*{palette base}{bg=lightlightblue}
\setbeamercolor*{palette base}{bg=LightUILightBlue}
\setbeamercolor*{palette primary}{bg=LightUIBase,fg=white}
\setbeamercolor*{palette secondary}{bg=LightUIRed,fg=white}
\setbeamercolor*{palette tertiary}{bg=LightUIBlue,fg=white}


% For the blocks
%\setbeamercolor*{block title}{fg=lightlightblue}
\setbeamercolor*{block title}{fg=LightUILightBlue,bg=white}
\setbeamercolor*{block alerted title}{fg=LightUIRed}

% Items
\setbeamercolor*{item}{fg=LightUIRed}
\setbeamercolor*{alerted text}{fg=LightUIRed}
\setbeamercolor{section in toc}{fg=LightUILightBlue}
%\setbeamercolor{section in toc}{fg=lightlightblue}


