\mode<presentation>

% Requirement
\RequirePackage{xcolor}

% Colours
%\colorlet{blockcolor}{RoyalBlue!80!Black}
\colorlet{blockcolor}{MidnightBlue}
\colorlet{codeblockcolor}{OliveGreen!80!Black}
\colorlet{alertblockcolor}{Bittersweet}
\colorlet{quoteblockprimary}{MidnightBlue}
\colorlet{quoteblocksecondary}{Gray}

% Text
\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=alertblockcolor}
\setbeamercolor{example text}{fg=codeblockcolor}

\setbeamercolor{structure}{fg=blockcolor}

% Palette
\setbeamercolor{palette primary}{fg=blockcolor}
\setbeamercolor{palette secondary}{fg=alertblockcolor}
\setbeamercolor{palette tertiary}{fg=codeblockcolor}
\setbeamercolor{palette quaternary}{fg=quoteblockprimary, bg=quoteblocksecondary}

% For the boxes
\setbeamercolor{block body}{fg=black}
\setbeamercolor{block body alerted}{}
\setbeamercolor{block body example}{}
\setbeamercolor{block title}{fg=blockcolor}
\setbeamercolor{block title alerted}{fg=alertblockcolor}
\setbeamercolor{block title example}{fg=codeblockcolor}

\mode
<all>
