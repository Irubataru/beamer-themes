\mode<presentation>

% Requirement
\RequirePackage{xcolor}

% Colours
\definecolor{heavybluecorp}{RGB}{48,66,105}
\definecolor{lightbluecorp}{RGB}{145,190,212}
\definecolor{lightgraycorp}{RGB}{217,232,255}
\definecolor{orangecorp}{RGB}{242,97,1}
\definecolor{graycorp}{RGB}{217,232,245}

% Settings
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{header text}{fg=white}

% For the boxes
\setbeamercolor*{palette base}{bg=heavybluecorp}
\setbeamercolor*{palette primary}{bg=orangecorp,fg=white}
\setbeamercolor*{palette secondary}{bg=lightbluecorp,fg=white}
\setbeamercolor*{palette tertiary}{bg=graycorp,fg=white}

% Items
\setbeamercolor*{item}{fg=orangecorp}
\setbeamercolor*{alerted text}{fg=orangecorp}

\mode
<all>
