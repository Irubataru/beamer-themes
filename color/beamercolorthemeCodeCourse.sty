\mode<presentation>

% Requirement
\RequirePackage{xcolor}

% Colours
\definecolor{Tropiteal}{RGB}{0,168,198}
\definecolor{TealDrop}{RGB}{64,192,203}
\definecolor{WhiteTrash}{RGB}{249,242,231}
\definecolor{AtomicBikini}{RGB}{174,226,57}
\definecolor{FeebleWeek}{RGB}{143,190,0}
\definecolor{ICantExpress}{RGB}{28,20,13}

% Settings
\setbeamercolor*{title page header}{fg=Tropiteal}
\setbeamercolor*{title}{fg=ICantExpress}
\setbeamercolor*{section}{fg=Tropiteal}
\setbeamercolor*{author}{fg=AtomicBikini}
\setbeamercolor*{date}{fg=TealDrop}
\setbeamercolor*{header text}{fg=ICantExpress}
\setbeamercolor*{normal text}{fg=ICantExpress}
\setbeamercolor*{frametitle}{fg=Tropiteal}

\setbeamercolor*{background canvas}{bg=WhiteTrash}

% For the boxes
\setbeamercolor*{palette base}{bg=Tropiteal}
\setbeamercolor*{palette primary}{bg=ICantExpress,fg=white}
\setbeamercolor*{palette secondary}{bg=Tropiteal,fg=white}
\setbeamercolor*{palette tertiary}{bg=Tropiteal,fg=white}


% For the blocks
\setbeamercolor*{block title}{fg=TealDrop,bg=white}
\setbeamercolor*{block alerted title}{fg=FeebleWeek}

% Items
\setbeamercolor*{item}{fg=FeebleWeek}
\setbeamercolor*{alerted text}{fg=AtomicBikini}
\setbeamercolor{section in toc}{fg=TealDrop}


\mode
<all>
