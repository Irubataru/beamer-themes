\newcommand{\LightTheme@inner@setshapetemplates}[2]{
  \setbeamertemplate{background band shape}[#1]{#2}
  \setbeamertemplate{title page band shape}[#1]{#2}
  \setbeamertemplate{block corner shape}[#1]{#2}
}

\pgfkeys{
  /LightTheme/inner/shape/.cd,
    .is choice,
    circle/.code=\LightTheme@inner@setshapetemplates{circle}{},
    square/.code=\LightTheme@inner@setshapetemplates{regular polygon}{4},
    pentagon/.code=\LightTheme@inner@setshapetemplates{regular polygon}{5},
    hexagon/.code=\LightTheme@inner@setshapetemplates{regular polygon}{6},
    septagon/.code=\LightTheme@inner@setshapetemplates{regular polygon}{7},
