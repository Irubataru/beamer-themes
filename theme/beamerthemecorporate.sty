% Requirement
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthememecorporate}
\RequirePackage{tikz}
\RequirePackage{pgfopts}

\pgfkeys{/corporate/.cd,
  .search also={
    /corporate/outer,
  }
}

\usetikzlibrary{positioning, calc}

% Some theme sizes
\newlength{\corporate@separationposition}
\setlength{\corporate@separationposition}{2cm}

\newlength{\corporate@separationwidth}
\setlength{\corporate@separationwidth}{1mm}

% Settings
\useinnertheme{corporate}
\useoutertheme{corporate}
\usecolortheme{corporate}
\usefonttheme{corporate}

\setbeamertemplate{navigation symbols}{}

% Items
\setbeamertemplate{items}[square]
\setbeamertemplate{sections/subsections in toc}[square]

\pgfkeys{/corporate/.cd,
  noslidenumbers/.code=\pgfkeysalso{outer/numbering=none},
}

\ProcessPgfOptions{/corporate}
