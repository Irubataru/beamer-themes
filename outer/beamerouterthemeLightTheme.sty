\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{LightTheme}[1][]
{
  %\vskip5pt
  \ifx\insertframesubtitle\@empty%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1cm]{frametitle} 
  \else%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.6cm]{frametitle} 
  \fi
    \hskip1ex\usebeamercolor{frametitle} \usebeamerfont{frametitle} \strut{}\insertframetitle
    \ifx\insertframesubtitle\@empty%
    \else%
      \\ \hskip1.3ex\usebeamercolor{framesubtitle} \usebeamerfont{framesubtitle} \insertframesubtitle
    \fi
  \end{beamercolorbox}
}

% Frame footer
\defbeamertemplate*{footline}{LightTheme}
{
  \begin{beamercolorbox}[wd=\paperwidth,ht=3ex,dp=1ex]{frametitle}
    \usebeamercolor{palette base}
    \begin{tikzpicture}[overlay,remember picture]
      \node[anchor=south east,text=bg] at ([shift={(-.2,.2)}] current page.south east) {
      $\insertframenumber$/$\inserttotalframenumber$};
    \end{tikzpicture}
  \end{beamercolorbox}
}

\mode<all>
