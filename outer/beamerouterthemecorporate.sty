\ProvidesPackage{beamerouterthemecorporate}

% Frame title
\defbeamertemplate*{frametitle}{corporate}[1][]
{
  \vskip1cm%
  \begin{beamercolorbox}[wd=\paperwidth,ht=.1cm]{frametitle} 
    \begin{tikzpicture}
      \useasboundingbox (0,0) rectangle(\the\paperwidth,1.2);

      \usebeamercolor{palette secondary}
      \fill[bg] (0,0) rectangle(2.95,1.2);

      \usebeamercolor{palette primary}
      \fill[bg] (3.05,0) rectangle(\the\paperwidth,1.2);

      \ifx\insertframesubtitle\@empty%
        {
          \usebeamercolor{frametitle}
          \node[
            anchor=west,
            color=fg,
            font=\usebeamerfont{frametitle}
          ] at (3.2,0.61) {\insertframetitle};
        }
      \else%
        {
          \usebeamercolor{frametitle}
          \node[
            anchor= west,
            color=fg,
            font=\usebeamerfont{frametitle}
          ] at (3.2,0.81) {\insertframetitle};

          \node[
            anchor= west,
            color=fg,
            font=\usebeamerfont{framesubtitle}
          ] at (3.3,0.41) {$\hookrightarrow$\hskip3pt\insertframesubtitle};
        }
      \fi
    \end{tikzpicture}
  \end{beamercolorbox}
}

\defbeamertemplate*{footline}{corporate}
{
  \begin{beamercolorbox}[wd=\paperwidth,ht=3ex,dp=1ex]{frametitle}
    \begin{tikzpicture}
      \useasboundingbox (0,0) rectangle (\the\paperwidth,2.25ex);

      \usebeamercolor{palette secondary}
      \fill[bg] (0,0) rectangle (2.95,3ex);

      \usebeamercolor{palette primary}
      \fill[bg] (3.05,0) rectangle(\the\paperwidth,3ex);

      \ifx\insertshortauthor\@empty
      \else
        {
          \usebeamercolor{footline}
          \node[
            anchor=west,
            color=fg,
            font=\usebeamerfont{footline}
          ] (author) at (3.2,1.5ex) {\insertshortauthor\strut};%
        }
      \fi

      \ifx\insertshortinstitute\@empty
      \else
        {
          \usebeamercolor{footline}
          \node[
            anchor=west,
            color=fg,
            anchor=south west,
            font=\usebeamerfont{footline}
            ] (institute) at ([xshift=.1em] author.south east) {(\insertshortinstitute)\strut};%
        }
      \fi

      \usebeamercolor{frame numbering}
      \node[
        anchor=east,
        color=fg,
        font=\usebeamerfont{frame numbering}
      ] at (\the\paperwidth - 0.5, 1.5ex)
        {$\insertframenumber$/$\inserttotalframenumber$};

    \end{tikzpicture}
  \end{beamercolorbox}
}
